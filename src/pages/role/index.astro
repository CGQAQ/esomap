---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL, ESO_API_URL } from "@/consts";
import Footer from "@/components/Footer.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";

const query = new URLSearchParams();
query.set("sort[0]", "id:asc");
query.set("populate", "*");

const response = await fetch(`${ESO_API_URL}/api/group-roles?${query}`);
const result = await response.json();
const data = result?.data;
---

<html lang="zh-CN">
  <head>
    <HeaderMeta
      title={`角色 - 上古卷轴OL攻略 - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />
    <main class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-4">
      <article class="p-6 md:col-span-3">
        <div class="markdown-body">
          <h1>
            角色
            <small class="text-gray-500">Role</small>
          </h1>
          <p>
            上古卷轴OL一共有 {data.length} 中角色。当玩家组队的时候，需要选择一种角色。
          </p>

          <h2>角色种类</h2>
          <ul>
            {
              data.map((x: any) => (
                <li>
                  <div class="flex items-center">
                    <a href={`/role/${x.attributes.slug}`}>
                      {x.attributes.name}
                    </a>
                    <img
                      class="inline-flex"
                      src={x.attributes.thumb}
                      height="32"
                      width="32"
                      alt=""
                    />
                    - {x.attributes.description}
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </article>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
