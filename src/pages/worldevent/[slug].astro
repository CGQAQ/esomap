---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL, ESO_API_URL } from "@/consts";
import Footer from "@/components/Footer.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import Meta from "@/components/Meta.astro";
import { md2html } from "@/utils";

const { slug } = Astro.params;

/** 世界事件 */
async function getWorldEvent(slug: string) {
  const query = new URLSearchParams();
  query.set("pagination[pageSize]", "1");
  query.set("pagination[page]", "1");
  query.set("filters[slug][$eq]", slug!);
  query.set("populate", "*");

  const response = await fetch(`${ESO_API_URL}/api/worldevents?${query}`);
  const result = await response.json();
  const data = result?.data[0];

  return data;
}

const data = await getWorldEvent(slug!);

if (data == null) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

const meta = [
  { name: "名称", content: data.attributes.name },
  { name: "英文", content: data.attributes.nameEn },
];
---

<html lang="zh-CN">
  <head>
    <HeaderMeta
      title={`${data.attributes.name} - 世界事件 - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />
    <main class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-4">
      <article class="p-6 md:col-span-3">
        <div class="markdown-body">
          <h1>
            {data.attributes.name}
            <small class="text-gray-500">{data.attributes.nameEn}</small>
          </h1>
          {
            data.attributes.thumb && (
              <img
                class="float-left w-5/12 mr-4"
                src={`${data.attributes.thumb}?imageView2/2/w/400/q/85`}
                width="400"
                alt={data.attributes.name}
              />
            )
          }
          <p>
            {data.attributes.name}是上古卷轴 OL 的一种<a href="/worldevent"
              >世界事件</a
            >。
          </p>
          <Fragment set:html={md2html(data.attributes.description)} />
          <p class="clear-both"></p>
          <Fragment set:html={md2html(data.attributes.content)} />
        </div>
      </article>

      <aside class="py-6 md:col-span-1">
        <Meta title="世界事件" meta={meta} />
      </aside>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
