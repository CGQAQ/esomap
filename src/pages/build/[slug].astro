---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL, ESO_API_URL } from "@/consts";
import Footer from "@/components/Footer.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import Meta from "@/components/Meta.astro";
import { md2html } from "@/utils";

const { slug } = Astro.params;

const query = new URLSearchParams();
query.set("pagination[pageSize]", "1");
query.set("pagination[page]", "1");
query.set("filters[slug][$eq]", slug!);
query.set("populate", "*");

const response = await fetch(`${ESO_API_URL}/api/builds?${query}`);
const result = await response.json();
const data = result?.data[0];

if (data == null) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

const klass = `<a href="/class/${data.attributes.class.data.attributes.slug}">${data.attributes.class.data.attributes.name}</a>`;
const role = `<a href="/role/${data.attributes.role.data.attributes.slug}">${data.attributes.role.data.attributes.name}</a>`;
const attribute = `<a href="/attribute/${data.attributes.attribute.data.attributes.slug}">${data.attributes.attribute.data.attributes.name}</a>`;

const meta = [
  { name: "职业", content: klass },
  { name: "角色", content: role },
  { name: "属性", content: attribute },
];
---

<html lang="zh-CN">
  <head>
    <HeaderMeta title={`攻略 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />
    <main class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-4">
      <article class="p-6 md:col-span-3">
        <h1 class="text-4xl text-gray-900 font-bold">
          {data.attributes.title}
        </h1>
        {
          data.attributes.image && (
            <img
              class="my-4 shadow-gray-300"
              src={data.attributes.image}
              alt=""
            />
          )
        }
        <div class="markdown-body">
          <p class="text-gray-500">{data.attributes.description}</p>
          <div set:html={md2html(data.attributes.content)} />
        </div>
      </article>

      <aside class="py-6 md:col-span-1">
        <Meta title="构建" meta={meta} />
      </aside>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
