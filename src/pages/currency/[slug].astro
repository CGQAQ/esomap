---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL, ESO_API_URL } from "@/consts";
import Footer from "@/components/Footer.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import Meta from "@/components/Meta.astro";
import { md2html, formatDateTime } from "@/utils";

const { slug } = Astro.params;

/** 货币 */
async function getCurrency(slug: string) {
  const query = new URLSearchParams();
  query.set("pagination[pageSize]", "1");
  query.set("pagination[page]", "1");
  query.set("filters[slug][$eq]", slug!);
  query.set("populate", "*");

  const response = await fetch(`${ESO_API_URL}/api/currencies?${query}`);
  const result = await response.json();

  return result?.data[0];
}

const data = await getCurrency(slug!);

if (data == null) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

function createTime(datatime: any) {
  const formated = formatDateTime(datatime);
  return `<time class="text-gray-900 text-sm mr-4" datetime="${datatime}" title="${datatime}">${formated}</time>`;
}

const meta = [
  {
    name: "图标",
    content: `<img src="${data.attributes.icon}" width="32" height="32" alt="" />`,
  },
];
---

<html lang="zh-CN">
  <head>
    <HeaderMeta
      title={`${data.attributes.name} - 货币 - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />
    <main class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-4">
      <article class="p-6 md:col-span-3">
        <div class="markdown-body">
          <h1>
            {data.attributes.name}
            <small class="text-gray-500">{data.attributes.nameEn}</small>
          </h1>
          <Fragment
            set:html={md2html(
              `<img class="inline" src="${data.attributes.icon}" width="20" height="20" alt="" />${data.attributes.name}是上古卷轴OL的一种[货币](/currency)。${data.attributes.description}`
            )}
          />
          <Fragment set:html={md2html(data.attributes.content)} />
        </div>
      </article>
      <aside class="py-6 md:col-span-1">
        <Meta title="货币" meta={meta} />
      </aside>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
